from altunityrunner.runner import AltrunUnityDriver
from time import sleep

class Scene1Tasks(object):
    '''
    classdocs
    '''


    
    def checkInformation(self, altdriver):
        altdriver.wait_for_current_scene_to_be('MainMenu')
        sleep(10)
        self.wait_for_element('button "information"').tap()
        self.wait_for_element('Information Pop-up')
        self.wait_for_element('Close').tap()
        